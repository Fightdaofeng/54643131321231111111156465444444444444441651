<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_layout" >

    <LinearLayout
        style="@style/top_lay"
        android:background="@color/top_hui"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:id="@+id/top_return"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/fanhui" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/top_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="订单号："
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/top_ddcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="45454545"
                    android:textSize="@dimen/text_size_17" />
            </LinearLayout>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入仓时间：2016/04/15 20:00:00"
                android:textColor="@color/h8b8b"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/top_msg"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:background="@drawable/fx2" />

        <TextView
            android:id="@+id/top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_hui"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_symbol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="黄金"
                        android:textColor="#515151"
                        android:textSize="@dimen/text_size_20" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/order_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/e34"
                            android:padding="3dp"
                            android:text="做空"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:id="@+id/order_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="10手"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/order_msg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/honggantanhao" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_yingli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1445.00"
                        android:textColor="@color/lv34"
                        android:textSize="@dimen/text_size_24" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/order_hui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现价" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/order_price"
                                style="@style/order_hui"
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1128.25" />

                            <ImageView
                                android:id="@+id/zhang_view"
                                android:layout_width="12dp"
                                android:layout_height="8dp"
                                android:visibility="gone"
                                android:background="@drawable/hongsanjiao" />

                            <ImageView
                                android:id="@+id/die_view"
                                android:layout_width="12dp"
                                android:layout_height="8dp"
                                android:visibility="gone"
                                android:background="@drawable/lvsanjiao" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/order_hui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买入价" />

                    <TextView
                        android:id="@+id/order_buy"
                        style="@style/order_hui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1128.25" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/order_hui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保证金" />

                    <TextView
                        android:id="@+id/order_bzj"
                        style="@style/order_hui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/huise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_hui"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/zd_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="追单"
                android:textColor="@drawable/selector_tab_hui_lan"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/huise" />

            <TextView
                android:id="@+id/zy_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="止盈/止损"
                android:textColor="@drawable/selector_tab_hui_lan"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/huise" />

            <TextView
                android:id="@+id/ydzs_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="移动止损"
                android:textColor="@drawable/selector_tab_hui_lan"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/huise" />

            <TextView
                android:id="@+id/pc_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="平仓"
                android:textColor="@drawable/selector_tab_hui_lan"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/top_hui"
            android:orientation="horizontal" >

            <View
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/lan01a"
                android:visibility="invisible" />

            <View
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/lan01a"
                android:visibility="invisible" />

            <View
                android:id="@+id/v3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/lan01a"
                android:visibility="invisible" />

            <View
                android:id="@+id/v4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/lan01a"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/huise" />

        <android.support.v4.view.ViewPager
            android:id="@+id/order_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>