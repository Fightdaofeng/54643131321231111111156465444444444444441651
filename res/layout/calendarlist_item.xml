<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zhuti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#F7F7F7"
        android:orientation="vertical" >

        <View style="@style/x_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fwhite"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/settime"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:background="@drawable/click_selected"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:text="17:30"
                            android:textColor="@color/fwhite"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/alarm_clock_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginRight="5dp"
                            android:text="17:00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/calendar_county_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/meiguo" />

                    <TextView
                        android:id="@+id/calendar_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="英国CBI订单差值英国CBI"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/alarm_Important"
                        android:layout_width="33dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/xing1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/jinzhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="前值：" />

                            <TextView
                                android:id="@+id/calendar_befor"
                                style="@style/jinzhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25.4%" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/jinzhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预测值：" />

                            <TextView
                                android:id="@+id/calendar_yuqi"
                                style="@style/jinzhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25.4%" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/jinzhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实际值："
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/calendar_gongbu"
                                style="@style/jinzhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25.4%"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/x_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    style="@style/jinzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金汇信号：" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美元"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/downyuan" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/xline" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal" >

                <!-- 利多和利空选项 -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/liduo_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="1dp"
                            android:background="@color/red"
                            android:text="利多"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/calendar_liduo"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="1dp"
                            android:background="#FFFFFF"
                            android:text="美元"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/likong_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/green"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="1dp"
                            android:background="@color/green"
                            android:text="利空"
                            android:textColor="#ffFFff" />

                        <TextView
                            android:id="@+id/calendar_likong"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="1dp"
                            android:background="#FFFFFF"
                            android:text="美元"
                            android:textColor="@color/green" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/x_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="今日暂未更新数据"
        android:visibility="gone" />

</LinearLayout>