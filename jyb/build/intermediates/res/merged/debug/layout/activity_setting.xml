                android:layout_height="1dp"
                android:layout_weight="1" />

            <View style="@style/youjiantou" />
        </LinearLayout>

        <View style="@style/x_line" />

        <LinearLayout
            android:id="@+id/gywm_lay"
            style="@style/set_lay_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View style="@style/youjiantou" />
        </LinearLayout>

        <View style="@style/x_line" />

        <LinearLayout
            android:id="@+id/hc_lay"
            style="@style/set_lay_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存清理" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/apphuancun_tv"
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pad_15"
                 />

            <View
                style="@style/youjiantou"
                android:visibility="invisible" />
        </LinearLayout>

        <View style="@style/x_line" />

        <LinearLayout
            style="@style/set_lay_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

