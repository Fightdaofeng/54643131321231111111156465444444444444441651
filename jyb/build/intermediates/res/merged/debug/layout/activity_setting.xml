            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View style="@style/youjiantou" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            style="@style/set_lay_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pad_15"
                android:text="stou" />

            <View style="@style/youjiantou" />
        </LinearLayout>

        <View style="@style/x_line" />

        <LinearLayout
            android:visibility="gone"
            style="@style/set_lay_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                style="@style/erji_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pad_15"
                android:text="微博" />

            <View style="@style/youjiantou" />
        </LinearLayout>

        <View style="@style/x_line" />

        <LinearLayout
            android:visibility="gone"
