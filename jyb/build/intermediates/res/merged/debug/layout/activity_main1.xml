<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_zt_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/top_hui"
        android:orientation="horizontal" >
    </LinearLayout>

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/huise" /> -->

    <LinearLayout
        android:id="@+id/main_ll_bg"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/daohanglan"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/main_ll_xw"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgxw"
                style="@style/main_img"
                android:background="@drawable/xinwen_sel" />

            <TextView
                android:id="@+id/main_xw_tv"
                style="@style/main_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻"
                android:textColor="@drawable/text_selected" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@drawable/shuxian" />

        <LinearLayout
            android:id="@+id/main_ll_rili"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgrili"
                style="@style/main_img"
                android:background="@drawable/rili_sel" />

            <TextView
                android:id="@+id/main_rl_tv"
                style="@style/main_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日历"
                android:textColor="@drawable/text_selected" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@drawable/shuxian" />

        <LinearLayout
            android:id="@+id/main_ll_hq"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imghq"
                style="@style/main_img"
                android:background="@drawable/hangqingsel" />

            <TextView
                android:id="@+id/main_hq_tv"
                style="@style/main_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行情"
                android:textColor="@drawable/text_selected" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@drawable/shuxian" />

        <LinearLayout
            android:id="@+id/main_ll_wd"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgwd"
                style="@style/main_img"
                android:background="@drawable/user_selected" />

            <TextView
                android:id="@+id/main_wd_tv"
                style="@style/main_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wodezhanghu"
                android:textColor="@drawable/text_selected" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@drawable/shuxian" />

        <LinearLayout
            android:id="@+id/main_ll_self"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgself"
                style="@style/main_img"
                android:background="@drawable/geren_selected" />

            <TextView
                android:id="@+id/main_self_tv"
                style="@style/main_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geren"
                android:textColor="@drawable/text_selected" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>