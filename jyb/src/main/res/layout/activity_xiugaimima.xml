<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/top_lay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/pad_20">


        <LinearLayout
            style="@style/lay_pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旧密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/inputedit"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/pas_dit1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入6-16位数字、字母或字符"
                    android:inputType="textPassword"
                    android:maxEms="16"
                    android:maxLength="16"
                    android:minEms="6"
                    android:padding="3dp"
                    android:textColorHint="#40000000"
                    android:textSize="@dimen/text_size_13" />

                <LinearLayout
                    android:id="@+id/del1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        style="@style/del_imgstyle"

                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yj_k1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/yj_img1"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/yanjing_selected" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tishi1"
                style="@style/tishidemo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="新密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/inputedit"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/pas_dit2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入6-16位数字、字母或字符"
                    android:inputType="textPassword"
                    android:maxEms="16"
                    android:maxLength="16"
                    android:minEms="6"
                    android:padding="3dp"
                    android:textColorHint="#40000000"
                    android:textSize="@dimen/text_size_13" />

                <LinearLayout
                    android:id="@+id/del2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        style="@style/del_imgstyle"

                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yj_k2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/yj_img2"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/yanjing_selected" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tishi2"
                style="@style/tishidemo" />

            <TextView
                android:id="@+id/commit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn1"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>