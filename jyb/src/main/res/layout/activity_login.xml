<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/top_lay" />
    </LinearLayout>

    <LinearLayout
        style="@style/lay_pad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/yjjx"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shouji" />

            <EditText
                android:id="@+id/login_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="请输入11位手机号"
                android:inputType="number"
                android:maxLength="11"
                android:padding="3dp"
                android:textColorHint="#40000000"
                android:textSize="@dimen/text_size_13" />
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/phone_del"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/xxxxx" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/phone_tishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yjjx"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mima" />

            <EditText
                android:id="@+id/pas_dit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入6-16位数字、字母或字符"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="3dp"
                android:textColorHint="#40000000"
                android:textSize="@dimen/text_size_13" />
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/pwd_del"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/xxxxx" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yj_k"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/yj_img"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/yanjing_selected" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pas_tishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/yjjx"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/xinfen3" />

                <EditText
                    android:id="@+id/login_code"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:padding="3dp"
                    android:textColorHint="#40000000"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/get_logincode"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/yzm_selected"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn1"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击注册，表示您已同意"
                android:textColor="#909090"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/to_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议既隐私政策》"
                android:textColor="@color/nolan"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>