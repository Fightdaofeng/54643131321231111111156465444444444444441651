<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_layout"
    android:background="@color/top_hui">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/top_lay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tishi_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/querenggou" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="注册成功"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="为自己换个头像"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.lxb.jyb.activity.view.RoundImageView
                            android:id="@+id/head_img"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/wel3" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/x_line" />

                <LinearLayout
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="为自己取个昵称" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <EditText
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_20"
                        android:background="@null"
                        android:hint="22" />

                    <View style="@style/youjiantou" android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="完善下列信息，体验金汇给你带来的定制服务" />

                    <TextView
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="完善个人信息送200积分"
                        android:textColor="#80ff0000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sex_lay"
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/sex_txt"
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_20"
                        android:text="男" />

                    <View style="@style/youjiantou" />
                </LinearLayout>

                <View style="@style/x_line" />

                <LinearLayout
                    android:id="@+id/body_lay"
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出生年月" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/body_txt"
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_20"
                        android:text="1993-12-02" />

                    <View style="@style/youjiantou" />
                </LinearLayout>

                <View style="@style/x_line" />

                <LinearLayout
                    android:id="@+id/selcity_lay"
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地区" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/city_txt"
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_20"
                        android:text="上海-上海市" />

                    <View style="@style/youjiantou" />
                </LinearLayout>

                <View style="@style/x_line" />

                <LinearLayout
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/email_edit"
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_20"
                        android:background="@null"
                        android:hint="输入邮箱" />

                    <View style="@style/youjiantou" android:visibility="invisible"/>
                </LinearLayout>

                <View style="@style/x_line" />

                <LinearLayout
                    android:id="@+id/guanzhu_lay"
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资关注" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/guanzhu_txt"
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_20"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="stou" />

                    <View style="@style/youjiantou" />
                </LinearLayout>

                <View style="@style/x_line" />

                <LinearLayout
                    android:id="@+id/age_lay"
                    style="@style/set_lay_pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/yiji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资年龄" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/touzi_age"
                        style="@style/erji_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pad_20"
                        android:text="stou" />

                    <View style="@style/youjiantou" />
                </LinearLayout>

                <View style="@style/x_line" />

                <TextView
                    android:id="@+id/commit_btn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn1"
                    android:gravity="center"
                    android:text="保存资料"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>