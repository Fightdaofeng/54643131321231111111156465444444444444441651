<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/xz_lay"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/xz_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/xzimg_sel" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_frag_jwls"
            android:layout_width="100dp"
            android:layout_height="75dp" />

        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_frag_jwls_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="欧盟欲与中国争夺在拉美的影响力"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_frag_jwls_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-6-19 19:11"
                    android:textColor="@color/tmblack"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>